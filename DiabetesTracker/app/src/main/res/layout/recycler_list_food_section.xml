<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- ratio 3:2 -->
            <TextView
                    android:id="@+id/food_name_view_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            <TextView
                android:id="@+id/date_view_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="right"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/calories_view_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_whatshot_black_24dp"
            android:gravity="center|left"
            android:paddingBottom="3dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sugar_view_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/ic_grain_black_24dp"
            android:gravity="center|left"
            android:textSize="16sp"
            />
    </LinearLayout>


</RelativeLayout>