<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs428.dit.diabetestracker.ProfileActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/topInfo">

        <TextView
            android:text="Your Profile"
            android:textSize="40dip"
            android:layout_gravity="left"
            android:layout_row="0"
            android:layout_column="0"
            />

        <Button
            android:text="Edit"
            android:id="@+id/editBtn"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            />

    </GridLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/topInfo"
        >



        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"

            android:id="@+id/attributes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:useDefaultMargins="true"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false"

            android:columnCount="4"
            >




            <TextView
                android:text="Age:"
                android:textSize="18dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/age"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="1"
                android:layout_column="1" />


            <TextView
                android:text="Waistline (cm):"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="2"
                android:layout_width="240dp"
                android:gravity="right"/>

            <TextView
                android:id="@+id/waistline"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="2"
                android:layout_column="1" />

            <TextView
                android:text="BMI (kg/square meter):"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="3"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/BMI"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="3"
                android:layout_column="1" />

            <TextView
                android:text="Family History:"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="4"
                android:layout_width="240dp"
                android:gravity="right"/>

            <TextView
                android:id="@+id/familyHistory"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="4"
                android:layout_column="1" />

            <TextView
                android:text="Gender (Male/Female):"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="5"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/gender"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="5"
                android:layout_column="1"/>

            <TextView
                android:paddingLeft="35dp"
                android:text="Blood Pressure (mmHg):"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="6"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/bloodPressure"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="6"
                android:layout_column="1" />

            <TextView
                android:paddingLeft="35dp"
                android:text="Do you have a sedentary job?:"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="7"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/sedentaryJob"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="7"
                android:layout_column="1" />

            <TextView
                android:paddingLeft="35dp"
                android:text="Daily Exercise Time(min):"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="8"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/exerciseT"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="8"
                android:layout_column="1" />

            <TextView
                android:paddingLeft="35dp"
                android:text="Have you been diagnosed with diabetes or have a history of IGR?:"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="9"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/diagnosedD"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="9"
                android:layout_column="1" />

            <TextView
                android:paddingLeft="35dp"
                android:text="Did your mother have diabetes while she was pregnant?:"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="10"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/GDM"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="10"
                android:layout_column="1" />

            <TextView
                android:paddingLeft="35dp"
                android:text="Birth Weight (lb):"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="11"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/weightB"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="11"
                android:layout_column="1" />

            <TextView
                android:paddingLeft="35dp"
                android:text="Do you have atherosclerotic CCVD?:"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="12"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/CCVD"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="12"
                android:layout_column="1" />

            <TextView
                android:paddingLeft="35dp"
                android:text="Do you have PCOS?:"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="13"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/PCOS"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="13"
                android:layout_column="1" />

            <TextView
                android:paddingLeft="35dp"
                android:text="Do you take any psychotropic drugs?:"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="14"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/psychotropic"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="14"
                android:layout_column="1" />

            <TextView
                android:paddingLeft="35dp"
                android:text="HDL Cholesterol (mmol/L):"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="15"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/HDL_C"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="15"
                android:layout_column="1" />

            <TextView
                android:paddingLeft="35dp"
                android:text="Triglyceride Levels (mmol/L):"
                android:textSize="18dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="16"
                android:layout_width="240dp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/TG"
                android:textSize="18dp"
                android:text="10"
                android:layout_gravity="left"
                android:layout_row="16"
                android:layout_column="1" />



        </GridLayout>
    </ScrollView>

</RelativeLayout>
